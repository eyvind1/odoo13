<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- tree view -->
    <record id="view_tree_colegio2" model="ir.ui.view">
        <field name = "name">view.tree.colegio2</field>
        <field name = "model">colegiotb</field>
        <field name = "arch" type="xml">
            <tree>
                <field name = "name"/>
                <field name = "edad"/>
                <field name = "email"/>
                <field name = "cellphone"/>
                <field name = "status"/>
                
            </tree>
        </field>
    </record>  
    
    <!-- form view of matricula-->
    <record id="view_form_colegio2" model="ir.ui.view">
        <field name = "name">view.form.colegio2</field>
        <field name = "model">colegiotb</field>
        <field name = "arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name = "name" string="Nombre"/>
                        </group>
                        <group>
                            <field name = "edad" string = "Edad"/>
                        </group>
                    </group>
                    <group>
                        <group>
                            <field name = "email" string="Email"/>
                        </group>
                        <group>
                            <field name = "cellphone" string = "Celular"/>
                        </group>
                    </group>
                    <group>
                        <field name = "status" string="Profesión"/>
                        <field name = "image" string="Imagen"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>  

   

    <record id = "action_view_matriculas" model="ir.actions.act_window">
        <field name = "name">Matrículas</field>
        <field name = "res_model">colegiotb</field>
        <field name = "view_mode">tree,form</field>
    </record> 
    
    <menuitem id="menu_matriculas" parent="menu_colegio" action="colegiomodule.action_view_matriculas"/> 
</odoo>